                                    <li  class="container_nav_right nav-item dropdown container_nav_right">
                                        <a style="color: #181819;"  class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" >
                                            <img style="height: 42px" src="/images/user.png">
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
